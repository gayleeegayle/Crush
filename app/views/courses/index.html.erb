<center>
	<h1>All Courses</h1>
	<%= link_to "Add a Course", new_course_path, class: "btn btn-warning btn-xs" %>
</center>
	
<br>

<div class="row">
	<div class="col-md-9 center">
		<table class="table table-bordered">
			<tr class="tableh">
				<th>Course Name</th>
				<th>Course Code</th>
				<th>Number of Crushes</th>
				<th>Actions</th>
			</tr>
			<% @courses.each do |c| %>
				<tr>
					<td><%= c.name %></td>
					<td><%= c.code %></td>
					<td><%= c.crushes.count %></td>
					<td>
						<%= link_to "Crushes with this Course", course_path(c.id), class: "btn btn-xs btn-info" %>
						<%= link_to "Edit Course", edit_course_path(c.id), class: "btn btn-xs btn-success" %>
						<%= link_to "Delete Course", course_path(c.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-xs btn-danger" %>
					</td>
				</tr>
			<% end %>
		</table>

	</div> 
</div>